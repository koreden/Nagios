define host{
	use		windows-server		; Inherit default values from a template
	host_name	OL-FILESERV			; The name we're giving to this host
	alias		Windows File Server	; A longer name associated with the host
	address		10.0.0.210		; IP address of the host
	hostgroups	hyperv-vms
	}
